<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/create_com"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/community_page"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Create Community"
        android:layout_marginTop="0dp"
        android:textColor="@color/orange"
        android:textSize="30dp" />

<!--        <Spinner-->
<!--            android:id="@+id/planets_spinner"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="48dp"-->
<!--            android:layout_margin="30dp"-->
<!--            android:backgroundTint="@color/white"-->
<!--            style="?attr/spinnerDropDownItemStyle"-->
<!--            android:hint="@string/com_category" />-->
        <TextView
            android:id="@+id/communityType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:textSize="18dp"
            android:text="Select Community Type" />

        <Spinner
            android:id="@+id/com_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/com_category_list" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/com_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="@string/com_name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/community_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/com_description"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="@string/com_description"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/com_desc"
            android:layout_width="match_parent"
            android:layout_height="140dp" />
    </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/two_btn_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/choose_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/purple_200"
                android:padding="4dip"
                android:text="Add IMAGE" />

<!--            <Button-->
<!--                android:id="@+id/use_camera"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:backgroundTint="@color/purple_200"-->
<!--                android:padding="4dip"-->
<!--                android:text="Delete IMAGE" />-->
        </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="0dp">
        <LinearLayout
            android:id="@+id/imageLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>

    </HorizontalScrollView>




        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:gravity="center">

<!--        <Button-->
<!--            android:id="@+id/button"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="30dp"-->
<!--            android:text="Save"-->
<!--            android:padding="4dip"-->
<!--            android:backgroundTint="@color/grey"/>-->

        <Button
            android:id="@+id/post_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginRight="10dp"
            android:padding="4dip"
            android:backgroundTint="@color/orange"
            android:text="Post" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>