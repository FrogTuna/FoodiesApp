        <ImageView
            android:id="@+id/ivSpinnerLayout"
            android:layout_width="56dp"
            android:layout_height="53dp"
            android:padding="10dp"
            android:src="@drawable/add_user" />
    </LinearLayout>


</RelativeLayout>