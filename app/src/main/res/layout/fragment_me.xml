<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="160dp"
        android:text="names"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:verticalScrollbarPosition="defaultPosition" />

    <ImageView
        android:id="@+id/headPortrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="30dp"
        android:visibility="visible"
        tools:src="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/postButtonProfile"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="200dp"
        android:contentDescription="@string/gcm_defaultSenderId"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/rsz_1post_icon" />

    <ImageButton
        android:id="@+id/starButtonProfile"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="200dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/rsz_1heart_icon" />

    <ImageButton
        android:id="@+id/messageButtonProfile"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="255dp"
        android:layout_marginTop="200dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/message_icon" />

    <ImageButton
        android:id="@+id/communityButtonProfile"
        android:layout_width="104dp"
        android:layout_height="103dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="305dp"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@drawable/community_icon" />

</FrameLayout>