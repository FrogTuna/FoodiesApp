<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:background="#FFFFFF"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/orange"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/communityImg"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            app:srcCompat="@drawable/create_post_stroke_bg" />

        <TextView
            android:id="@+id/communityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/join_community_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="food_img"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/white_join" />


    </LinearLayout>

</androidx.cardview.widget.CardView>




